{
    "openapi": "3.0.1",
    "info": {
        "version": "v1",
        "title": "Vicourses Auth API",
        "description": "Vicourses API documentation for authentication"
    },
    "servers": [
        {
            "url": "/api/as/v1"
        }
    ],
    "components": {
        "securitySchemes": {
            "BearerAuth": {
                "type": "http",
                "scheme": "bearer"
            }
        }
    },
    "paths": {
        "/auth/login": {
            "post": {
                "tags": ["Auth"],
                "summary": "Login with email and password",
                "produces": ["application/json"],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "email": {
                                        "type": "string"
                                    },
                                    "password": {
                                        "type": "string"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "accessToken": {
                                            "type": "string"
                                        },
                                        "refreshToken": {
                                            "type": "string"
                                        },
                                        "user": {
                                            "type": "object",
                                            "$ref": "#/definitions/User"
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Invalid credentials"
                    }
                }
            }
        },
        "/auth/google-login": {
            "post": {
                "tags": ["Auth"],
                "summary": "Login with google",
                "produces": ["application/json"],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "idToken": {
                                        "type": "string"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "accessToken": {
                                            "type": "string"
                                        },
                                        "refreshToken": {
                                            "type": "string"
                                        },
                                        "user": {
                                            "type": "object",
                                            "$ref": "#/definitions/User"
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Invalid credentials"
                    }
                }
            }
        },
        "/auth/register": {
            "post": {
                "tags": ["Auth"],
                "summary": "Register new user",
                "produces": ["application/json"],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "name": {
                                        "type": "string"
                                    },
                                    "email": {
                                        "type": "string"
                                    },
                                    "password": {
                                        "type": "string"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "user": {
                                            "type": "object",
                                            "$ref": "#/definitions/User"
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Email already exists"
                    }
                }
            }
        },
        "/auth/refresh-token": {
            "post": {
                "tags": ["Auth"],
                "summary": "Refresh new access token",
                "produces": ["application/json"],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "refreshToken": {
                                        "type": "string"
                                    },
                                    "userId": {
                                        "type": "string"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "accessToken": {
                                            "type": "string"
                                        },
                                        "refreshToken": {
                                            "type": "string"
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Invalid refresh token"
                    },
                    "403": {
                        "description": "You are locked out"
                    }
                }
            }
        },
        "/auth/revoke-refresh-token": {
            "post": {
                "tags": ["Auth"],
                "summary": "Revoke existing refresh token",
                "produces": ["application/json"],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "refreshToken": {
                                        "type": "string"
                                    },
                                    "userId": {
                                        "type": "string"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Refresh token revoked"
                    }
                }
            }
        },
        "/auth/confirm-email": {
            "post": {
                "tags": ["Auth"],
                "summary": "Confirm user's email",
                "produces": ["application/json"],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "token": {
                                        "type": "string"
                                    },
                                    "userId": {
                                        "type": "string"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                    },
                    "401": {
                        "description": "Invalid token"
                    }
                }
            }
        },
        "/auth/email-confirmation-link": {
            "post": {
                "tags": ["Auth"],
                "summary": "Resend email confirmation link to user email",
                "produces": ["application/json"],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "email": {
                                        "type": "string"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                    },
                    "404": {
                        "description": "Email not found"
                    }
                }
            }
        },
        "/auth/reset-password": {
            "post": {
                "tags": ["Auth"],
                "summary": "Reset user's password",
                "produces": ["application/json"],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "userId": {
                                        "type": "string"
                                    },
                                    "token": {
                                        "type": "string"
                                    },
                                    "newPassword": {
                                        "type": "string"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                    },
                    "401": {
                        "description": "Invalid token"
                    }
                }
            }
        },
        "/auth/password-reset-link": {
            "post": {
                "tags": ["Auth"],
                "summary": "Send password reset link to user email",
                "produces": ["application/json"],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "email": {
                                        "type": "string"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                    },
                    "404": {
                        "description": "Email not found"
                    }
                }
            }
        },
        "/me": {
            "get": {
                "tags": ["Me"],
                "summary": "Get authenticated user",
                "produces": ["application/json"],
                "security": [
                    {
                        "BearerAuth": {}
                    }
                ],
                "responses": {
                    "200": {
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "$ref": "#/definitions/User"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "User not found"
                    }
                }
            }
        },
        "/me/password": {
            "put": {
                "tags": ["Me"],
                "summary": "Change user's password",
                "produces": ["application/json"],
                "security": [
                    {
                        "BearerAuth": {}
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "oldPassword": {
                                        "type": "string"
                                    },
                                    "newPassword": {
                                        "type": "string"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                    },
                    "403": {
                        "description": "Password not match"
                    }
                }
            }
        },
        "/users/{id}": {
            "get": {
                "tags": ["User"],
                "summary": "Get an user",
                "produces": ["application/json"],
                "security": [
                    {
                        "BearerAuth": {}
                    }
                ],
                "parameters": [
                    {
                        "in": "path",
                        "name": "id",
                        "schema": {
                            "type": "string"
                        },
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "$ref": "#/definitions/User"
                                }
                            }
                        }
                    },
                    "403": {
                        "description": "Forbidden"
                    },
                    "404": {
                        "description": "User not found"
                    }
                }
            }
        },
        "/users/{id}/lock": {
            "put": {
                "tags": ["User"],
                "summary": "Lock an user",
                "produces": ["application/json"],
                "security": [
                    {
                        "BearerAuth": {}
                    }
                ],
                "parameters": [
                    {
                        "in": "path",
                        "name": "id",
                        "schema": {
                            "type": "string"
                        },
                        "required": true
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "days": {
                                        "type": "integer"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                    },
                    "403": {
                        "description": "Forbidden"
                    },
                    "404": {
                        "description": "User not found"
                    }
                }
            }
        },
        "/users/{id}/role": {
            "put": {
                "tags": ["User"],
                "summary": "Set role for an user",
                "produces": ["application/json"],
                "security": [
                    {
                        "BearerAuth": {}
                    }
                ],
                "parameters": [
                    {
                        "in": "path",
                        "name": "id",
                        "schema": {
                            "type": "string"
                        },
                        "required": true
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "role": {
                                        "type": "string"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                    },
                    "403": {
                        "description": "Forbidden"
                    },
                    "404": {
                        "description": "User not found"
                    }
                }
            }
        }
    },
    "definitions": {
        "User": {
            "properties": {
                "id": {
                    "type": "string",
                    "uniqueItems": true
                },
                "email": {
                    "type": "string",
                    "uniqueItems": true
                },
                "name": {
                    "type": "string"
                },
                "createdAt": {
                    "type": "string",
                    "example": "2024-04-05T00:00:00.000Z"
                },
                "role": {
                    "type": "string"
                },
                "emailConfirmed": {
                    "type": "boolean"
                },
                "lockoutEnd": {
                    "type": "string",
                    "example": "2024-04-05T00:00:00.000Z"
                },
                "locked": {
                    "type": "boolean"
                }
            }
        }
    }
}
