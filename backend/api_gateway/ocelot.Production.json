{
    "GlobalConfiguration": {
        "BaseUrl": "http://localhost:8000"
    },
    "Routes": [
        {
            "DownstreamPathTemplate": "/api/{version}/auth/{everything}",
            "DownstreamScheme": "http",
            "DownstreamHostAndPorts": [
                {
                    "Host": "auth-service",
                    "Port": 3000
                }
            ],
            "UpstreamPathTemplate": "/{version}/auth/{everything}",
            "UpstreamHttpMethod": [ "POST" ]
        }
    ]
}